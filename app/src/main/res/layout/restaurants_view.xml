<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/restaurant_icon"
        android:layout_width="117dp"
        android:layout_height="95dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:maxWidth="80dp"
        android:maxHeight="80dp"
        app:srcCompat="@drawable/aw" />

    <TextView
        android:id="@+id/restaurant_txtName"
        android:layout_width="266dp"
        android:layout_height="42dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="138dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="7dp"
        android:text="txtName"
        android:textSize="28sp" />

    <TextView
        android:id="@+id/restaurant_txtIssues"
        android:layout_width="26dp"
        android:layout_height="29dp"
        android:layout_alignBottom="@+id/restaurant_icon"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="58dp"
        android:layout_marginEnd="142dp"
        android:layout_marginBottom="8dp"
        android:text="# issues"
        android:textAlignment="center"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/restaurant_txtDate"
        android:layout_width="114dp"
        android:layout_height="32dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="1dp"
        android:text="inspect date"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/restaurant_hazardicon"
        android:layout_width="35dp"
        android:layout_height="29dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="58dp"
        android:layout_marginEnd="251dp"
        android:maxWidth="40dp"
        android:maxHeight="30dp"
        app:srcCompat="@drawable/hazardlow" />

    <TextView
        android:id="@+id/hazard_level"
        android:layout_width="76dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="158dp"
        android:layout_marginTop="59dp"
        android:text="h_level"
        android:textSize="16dp" />
</RelativeLayout>
